<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
<TextView
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:id="@+id/file_chooser_label" android:text="@string/explorer_label"/>
<ListView
	android:id="@android:id/list"
	android:layout_width="fill_parent" android:layout_height="230dp"/>
<TextView
	android:id="@android:id/empty"
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:gravity="bottom" 
    android:text="No Data"
	/>
<EditText 
	android:id="@+id/filename"
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:gravity="bottom" 
/>
<Button android:id="@+id/savefile" android:text="Ok" android:layout_width="match_parent" android:layout_height="46dp"
    android:gravity="center" 
></Button>
</LinearLayout>
